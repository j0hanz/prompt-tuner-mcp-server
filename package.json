{
  "name": "@j0hanz/prompt-tuner-mcp-server",
  "version": "1.3.3",
  "description": "MCP server that refines and improves user prompts for AI-optimal readability",
  "type": "module",
  "bin": {
    "prompt-tuner-mcp-server": "./dist/index.js"
  },
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/j0hanz/prompt-tuner-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/j0hanz/prompt-tuner-mcp-server/issues"
  },
  "homepage": "https://github.com/j0hanz/prompt-tuner-mcp-server#readme",
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true}); ['tsconfig.tsbuildinfo', 'tsconfig.build.tsbuildinfo', 'tsconfig.test.tsbuildinfo'].forEach(f => require('fs').rmSync(f, {force:true}))\"",
    "validate:instructions": "node -e \"require('fs').accessSync('src/instructions.md')\"",
    "build": "tsc -p tsconfig.json && npm run validate:instructions && npm run copy:assets && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "build:clean": "npm run clean && npm run build",
    "copy:assets": "node -e \"require('fs').copyFileSync('src/instructions.md', 'dist/instructions.md')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js",
    "test": "node --test --import=tsx --test-reporter=spec",
    "test:coverage": "node --test --experimental-test-coverage --import=tsx --test-reporter=spec --test-reporter=lcov --test-reporter-destination=stdout --test-reporter-destination=coverage/lcov.info",
    "test:watch": "node --test --watch --import=tsx --test-reporter=spec",
    "lint": "eslint .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.test.json",
    "duplication": "jscpd -f typescript,tsx -p \"**/*.ts\" -k 50 -t 3 src",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "inspector:http": "npx @modelcontextprotocol/inspector -- node dist/index.js",
    "prepublishOnly": "npm run lint && npm run type-check && npm run build:clean"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prompt",
    "prompt-engineering",
    "ai",
    "llm",
    "refinement",
    "optimization",
    "typescript"
  ],
  "author": "j0hanz",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/genai": "^1.37.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "openai": "^6.16.0",
    "pino": "^10.2.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^22.19.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-de-morgan": "^2.0.0",
    "eslint-plugin-depend": "^1.4.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jscpd": "^4.0.7",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
